@model IEnumerable<DentalClinicManagementSystem.Models.Image>

@{
    ViewBag.Title = "Uploaded Images";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Images</h2>

<p>
    @Html.ActionLink("Upload New Image", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Label("Image", new { style = "font-weight:bold;" })
            </th>
            <th>
                @Html.Label("Name", new { style = "font-weight:bold;" })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="img-thumbnail" src="@Url.Content("~/Uploads/" + item.ImagePath)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImageName)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.ImageId })
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
    }
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css"rel="stylesheet" />