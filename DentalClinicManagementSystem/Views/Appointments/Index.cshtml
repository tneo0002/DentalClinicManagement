@model IEnumerable<DentalClinicManagementSystem.Models.Appointment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Appointment History</h2>

<p>
    @Html.ActionLink("Make A New Appointment", "Create")
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.Label("Dentist", new { style = "font-weight:bold;" })
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentFname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentLname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentCreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Dentist.DentistName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentFname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentLname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentCreatedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentEmail)
                </td>
                <td>
                    @Html.ActionLink("Cancel", "Delete", new { id = item.AppointmentId })
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
    }
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />